#:import MapSource kivy_garden.mapview.MapSource
#:import asynckivy asynckivy

MainScreen:
    id: mainScreen
    link_screen_manager: screen_manager
    link_reservation_screen: reservationScreen
    link_payment_screen: paymentScreen
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "screen1"
                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDButtonIcon:
                        icon: "plus"

                    MDButtonText:
                        text: "Elevated"

                ParksMapView:
                    bottom_sheet: bottom_sheet
                    map_source: MapSource(url=app.map_sources[app.current_map])
                    lat: 53.3
                    lon: 58.9
                    zoom: 10
                    on_zoom:
                        self.zoom = 10 if self.zoom < 10 else self.zoom
                    on_lat:
                        self.StartGettingParksInFov()
                    on_lon:
                        self.StartGettingParksInFov()
                BottomSheet:
                    id: bottom_sheet
                    link_button: buttonReservation
                    link_list: listBottomSheet
                    link_screen: mainScreen
                    #adaptive_height: True
                    sheet_type: "modal"
                    size_hint_y: 0.5
                    orientation: "vertical"
                    md_bg_color: app.theme_cls.backgroundColor

                    MDBottomSheetDragHandle:
                        drag_handle_color: "grey"
                        
                    MDBoxLayout:
                        id: content_container
                        orientation: "vertical"
                        #padding: 0, 0, 0, "20dp"
                        #spacing: 50

                        MDList:
                            id: listBottomSheet
                        MDBoxLayout:
                            #padding: 250, "50sp", 0, 100
                            orientation: "horizontal"
                            spacing: 50
                            MDButton:
                                id: buttonReservation
                                style: "elevated"
                                #size_hint_x: None
                                pos_hint: {"center_x": .5, "center_y": .5}
                                theme_bg_color: "Custom"
                                md_bg_color: "#000000"  
                                on_release: bottom_sheet.Reservation()#root.link_screen_manager.current = "screen2"
                                #icon_color: "white"
                                #text: "хуй" почётный комментарий, не трогать!!!
    #                            MDButtonIcon:
    #                                icon: "plus"

                                MDButtonText:
                                    text: "Бронировать"
                                    theme_text_color: "Custom"
                                    text_color: "white"

#                            MDButton:
#                                id: buttonPay
#                                style: "elevated"
#                                pos_hint: {"center_x": .5, "center_y": .5}
#                                theme_bg_color: "Custom"
#                                md_bg_color: "#000000"
#                                #icon_color: "white"
#                                #text: "хуй" почётный комментарий, не трогать!!!
#    #                            MDButtonIcon:
#    #                                icon: "plus"
#
#                                MDButtonText:
#                                    text: "Оплатить"
#                                    theme_text_color: "Custom"
#                                    text_color: "white"


            ReservationScreen:
                id: reservationScreen
                name: "screen2"
                link_screen: mainScreen
                titleParking: labelTitle
                addressParking: labelAddress
                dateParking: labelData
                timeStart: labelTime
                numbersCar: textfieldNumbersCar
                md_bg_color: self.theme_cls.backgroundColor

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 50
                    #pos_hint: {"center_x": 0.1,  "center_y": 0.9}
                    MDBoxLayout:
                        spacing: 10
                        MDButton:
                            MDButtonIcon:
                                icon: "arrow-left"
                                theme_text_color: "Custom"
                                text_color: "black"
                        MDLabel:
                            text: "Бронировать"

                    MDLabel:
                        id: labelTitle
                    MDLabel
                        id: labelAddress

                    MDButton:
                        style: "elevated"
                        #pos_hint: {'center_x': .5, 'center_y': .5}
                        on_release: app.show_date_picker(root.link_reservation_screen)

                        MDButtonText:
                            text: "Выберите дату стоянки"

                    MDLabel:
                        id: labelData
                        text: "пока не придумали как дату выводить"
                    MDLabel
                        id: labelTime
                        text: "пока не придумали как время выводить"

                    MDTextField:
                        id: textfieldNumbersCar
                        mode: "filled"
                        MDTextFieldHintText:
                            text: "Регистрационный номер"
                        MDTextFieldHelperText:
                            text: "Номер машины"
                            mode: "persistent"

                        MDTextFieldMaxLengthText:
                            max_text_length: 10

                    MDButton:
                        style: "elevated"
                        theme_bg_color: "Custom"
                        md_bg_color: "#000000"
                        on_release: reservationScreen.proceed_to_payment()
                        MDButtonText:
                            text: "Перейти к оплате"
                            theme_text_color: "Custom"
                            text_color: "white"

            PaymentScreen:
                id: paymentScreen
                name: "screen3"
                link_numbersCard: numbersCard
                link_expiryDateYears: expiryDateYears
                link_expiryDateMonths: expiryDateMounts
                link_cv_code: cv_code
                md_bg_color: self.theme_cls.backgroundColor
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 50
                    TextInputField:
                        id: numbersCard
                        mode: "outlined"
                        max_characters: 15
                        input_filter: 'int'
                        MDTextFieldHintText:
                            text: "Номер карты"
                        MDTextFieldHelperText:
                            text: "16-значный номер, расположенный на обороте карты"
                            mode: "persistent"

                        MDTextFieldMaxLengthText:
                            max_text_length: 16

                    MDBoxLayout:
                        orientation: "horizontal"
                        TextInputField:
                            id: expiryDateYears
                            mode: "outlined"
                            max_characters: 1
                            input_filter: 'int'
                            MDTextFieldHintText:
                                text: "Срок действия(год)"
                            MDTextFieldMaxLengthText:
                                max_text_length: 2

                        TextInputField:
                            id: expiryDateMounts
                            mode: "filled"
                            max_characters: 1
                            input_filter: 'int'
                            MDTextFieldHintText:
                                text: "Срок действия(месяц)"
                            MDTextFieldMaxLengthText:
                                max_text_length: 2

                    TextInputField:
                        id: cv_code
                        mode: "outlined"
                        max_characters: 2
                        input_filter: 'int'
                        MDTextFieldHintText:
                            text: "CV код"
                        MDTextFieldMaxLengthText:
                            max_text_length: 3

                    MDButton:
                        style: "elevated"
                        theme_bg_color: "Custom"
                        md_bg_color: "#000000"
                        on_release: paymentScreen.payment()
                        MDButtonText:
                            text: "Оплатить"
                            theme_text_color: "Custom"
                            text_color: "white"













