#:import MapSource kivy_garden.mapview.MapSource
#:import asynckivy asynckivy

MainScreen:
    id: mainScreen
    link_screen_manager: screen_manager
    link_reservation_screen: reservationScreen
    link_payment_screen: paymentScreen
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "screen1"
                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDButtonIcon:
                        icon: "plus"

                    MDButtonText:
                        text: "Elevated"

                ParksMapView:
                    bottom_sheet: bottom_sheet
                    map_source: MapSource(url=app.map_sources[app.current_map])
                    lat: 53.3
                    lon: 58.9
                    zoom: 10
                    on_zoom:
                        self.zoom = 10 if self.zoom < 10 else self.zoom
                    on_lat:
                        self.StartGettingParksInFov()
                    on_lon:
                        self.StartGettingParksInFov()
        

            ReservationScreen:
                id: reservationScreen
                name: "screen2"
                link_screen: mainScreen
                titleParking: labelTitle
                typePark: labelType
                addressParking: labelAddress
                dateParking: labelData
                timeStart: labelTime
                numbersCar: textfieldNumbersCar
                md_bg_color: self.theme_cls.backgroundColor

                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDTopAppBar:
                        type: "small"
                        height:"40dp"
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "arrow-left"
                        MDTopAppBarTitle:
                            text: "Итого:"
                    
                    MDBoxLayout:
                        padding: 20,0,20,0
                        orientation: "vertical"
                        spacing:0
                        MDLabel:
                            id: labelTitle
                            text: "Park Name"
                            theme_text_color: "Custom"
                            text_color:"#000000"
                            font_style: "Title"
                            role: "medium"
                            haling: "center"
                            font_size: 20
                            valing:"bottom"
                            theme_bg_color: "Custom"
                            md_bg_color: "#AAAAAA"
                        MDLabel:
                            id: labelType
                            text: "Park Type"
                            theme_text_color: "Custom"
                            text_color:"#000000"
                            font_style: "Title"
                            role: "medium"
                            underline: True
                            font_size: 20    


                    MDLabel:
                        
                    MDLabel
                        id: labelAddress

                    MDButton:
                        style: "elevated"
                        #pos_hint: {'center_x': .5, 'center_y': .5}
                        on_release: app.show_date_picker(root.link_reservation_screen)

                        MDButtonText:
                            text: "Выберите дату стоянки"

                    MDLabel:
                        id: labelData
                        text: "пока не придумали как дату выводить"
                    MDLabel
                        id: labelTime
                        text: "пока не придумали как время выводить"

                    MDTextField:
                        id: textfieldNumbersCar
                        mode: "filled"
                        MDTextFieldHintText:
                            text: "Регистрационный номер"
                        MDTextFieldHelperText:
                            text: "Номер машины"
                            mode: "persistent"

                        MDTextFieldMaxLengthText:
                            max_text_length: 10

                    MDButton:
                        style: "elevated"
                        theme_bg_color: "Custom"
                        md_bg_color: "#000000"
                        on_release: reservationScreen.proceed_to_payment()
                        MDButtonText:
                            text: "Перейти к оплате"
                            theme_text_color: "Custom"
                            text_color: "white"

            PaymentScreen:
                id: paymentScreen
                name: "screen3"
                link_numbersCard: numbersCard
                link_expiryDateYears: expiryDateYears
                link_expiryDateMonths: expiryDateMounts
                link_cv_code: cv_code
                md_bg_color: self.theme_cls.backgroundColor
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 50
                    TextInputField:
                        id: numbersCard
                        mode: "outlined"
                        max_characters: 15
                        input_filter: 'int'
                        MDTextFieldHintText:
                            text: "Номер карты"
                        MDTextFieldHelperText:
                            text: "16-значный номер, расположенный на обороте карты"
                            mode: "persistent"

                        MDTextFieldMaxLengthText:
                            max_text_length: 16

                    MDBoxLayout:
                        orientation: "horizontal"
                        TextInputField:
                            id: expiryDateYears
                            mode: "outlined"
                            max_characters: 1
                            input_filter: 'int'
                            MDTextFieldHintText:
                                text: "Срок действия(год)"
                            MDTextFieldMaxLengthText:
                                max_text_length: 2

                        TextInputField:
                            id: expiryDateMounts
                            mode: "filled"
                            max_characters: 1
                            input_filter: 'int'
                            MDTextFieldHintText:
                                text: "Срок действия(месяц)"
                            MDTextFieldMaxLengthText:
                                max_text_length: 2

                    TextInputField:
                        id: cv_code
                        mode: "outlined"
                        max_characters: 2
                        input_filter: 'int'
                        MDTextFieldHintText:
                            text: "CV код"
                        MDTextFieldMaxLengthText:
                            max_text_length: 3

                    MDButton:
                        style: "elevated"
                        theme_bg_color: "Custom"
                        md_bg_color: "#000000"
                        on_release: paymentScreen.payment()
                        MDButtonText:
                            text: "Оплатить"
                            theme_text_color: "Custom"
                            text_color: "white"
        BottomSheet:
            id: bottom_sheet
            link_button: buttonReservation
            link_list: listBottomSheet
            link_screen: mainScreen
            #adaptive_height: True
            sheet_type: "modal"
            size_hint_y: None
            #orientation: "vertical"
            height:433
            MDBottomSheetDragHandle:
                drag_handle_color: "#A3A2A2"
                
                        
            MDBoxLayout:
                id: content_container
                orientation: "vertical"
                

                MDList:
                    id: listBottomSheet
                MDFloatLayout:
                    padding: 0, 0, 0, 0
                    #orientation: "horizontal"
                    height: 60
                    #spacing: 50
                    MDButton:
                        id: buttonReservation
                        style: "elevated"
                        theme_width: "Custom"
                        theme_height: "Custom"
                        size_hint: 0.7,.6
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        theme_bg_color: "Custom"
                        md_bg_color: "#000000"  
                        on_release: bottom_sheet.Reservation()
                        #icon_color: "white"
                        #text: "хуй" почётный комментарий, не трогать!!!
#                            MDButtonIcon:
#                                icon: "plus"

                        MDButtonText:
                            text: "Бронировать"
                            font_size:15
                            pos_hint: {"center_x": .5, "center_y": .5}
                            theme_text_color: "Custom"
                            text_color: "white"

