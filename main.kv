#:import MapSource kivy_garden.mapview.MapSource
#:import asynckivy asynckivy

MainScreen:
    id: mainScreen
    link_screen_manager: screen_manager
    link_reservation_screen: reservationScreen
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "screen1"
                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDButtonIcon:
                        icon: "plus"

                    MDButtonText:
                        text: "Elevated"

                ParksMapView:
                    bottom_sheet: bottom_sheet
                    map_source: MapSource(url=app.map_sources[app.current_map])
                    lat: 53.3
                    lon: 58.9
                    zoom: 10
                    on_zoom:
                        self.zoom = 10 if self.zoom < 10 else self.zoom
                    on_lat:
                        self.StartGettingParksInFov()
                    on_lon:
                        self.StartGettingParksInFov()
        

            ReservationScreen:
                id: reservationScreen
                name: "screen2"
                titleParking: labelTitle
                addressParking: labelAddress
                dateParking: labelData
                timeStart: labelTime
                numbersCar: labelNumbersCar

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 50
                    #pos_hint: {"center_x": 0.1,  "center_y": 0.9}
                    MDBoxLayout:
                        spacing: 10
                        MDButton:
                            MDButtonIcon:
                                icon: "arrow-left"
                                theme_text_color: "Custom"
                                text_color: "black"
                        MDLabel:
                            text: "Бронировать"

                    MDLabel:
                        id: labelTitle
                    MDLabel
                        id: labelAddress
                    MDTextField:
                        text: ""
                        MDTextFieldHintText:
                            text: "Дата стоянки"

                MDButton:
                    style: "elevated"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release: app.show_date_picker()

                    MDButtonText:
                        text: "Open modal date picker dialog"


                MDLabel:
                    id: labelData
                    text: "пока не придумали как дату выводить"
                MDLabel
                    id: labelTime
                    text: "пока не придумали как время выводить"
                MDLabel
                    id: labelNumbersCar
        BottomSheet:
            id: bottom_sheet
            link_button: buttonReservation
            link_list: listBottomSheet
            link_screen: mainScreen
            #adaptive_height: True
            sheet_type: "modal"
            size_hint_y: None
            #orientation: "vertical"
            height:433
            MDBottomSheetDragHandle:
                drag_handle_color: "#A3A2A2"
                
                        
            MDBoxLayout:
                id: content_container
                orientation: "vertical"
                

                MDList:
                    id: listBottomSheet
                MDFloatLayout:
                    padding: 0, 0, 0, 0
                    #orientation: "horizontal"
                    height: 60
                    #spacing: 50
                    MDButton:
                        id: buttonReservation
                        style: "elevated"
                        theme_width: "Custom"
                        theme_height: "Custom"
                        size_hint: 0.7,.6
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        theme_bg_color: "Custom"
                        md_bg_color: "#000000"  
                        on_release: bottom_sheet.Reservation()
                        #icon_color: "white"
                        #text: "хуй" почётный комментарий, не трогать!!!
#                            MDButtonIcon:
#                                icon: "plus"

                        MDButtonText:
                            text: "Бронировать"
                            font_size:15
                            pos_hint: {"center_x": .5, "center_y": .5}
                            theme_text_color: "Custom"
                            text_color: "white"

